<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activates.BookInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bookInfo_bookImg"
            android:minWidth="100dp"
            android:minHeight="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="330dp"
            android:maxWidth="110dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/bookInfo_bookName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="图书名字"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bookInfo_authorName"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="作者名字"/>
            </LinearLayout>

            <TextView
                android:id="@+id/bookInfo_bookAbout"
                android:textSize="12sp"
                android:textAlignment="textStart"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图书详情"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn"
                    android:textAlignment="center"
                    android:paddingHorizontal="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="加入书架"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn"
                    android:textAlignment="center"
                    android:paddingHorizontal="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="开始阅读"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/bookInfo_chapters_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>