<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3D3636"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/read_setting_led"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/setting_lightSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="7" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/setting_lightSystem_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/read_setting_btn_select"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="@string/read_system_led"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3D3636"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/read_setting_background"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/setting_radioGroup"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <com.kkkkkn.readbooks.view.customView.BackgroundRadioButton
                android:id="@+id/setting_radio_retro"
                android:button="@null"
                android:background="@drawable/read_setting_background_select"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:imgLabel="@drawable/browsingview" />

            <com.kkkkkn.readbooks.view.customView.BackgroundRadioButton
                android:id="@+id/setting_radio_gray"
                android:button="@null"
                android:background="@drawable/read_setting_background_select"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorLabel="#7B7070" />

            <com.kkkkkn.readbooks.view.customView.BackgroundRadioButton
                android:id="@+id/setting_radio_green"
                android:button="@null"
                android:background="@drawable/read_setting_background_select"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorLabel="#3FAA98" />

            <com.kkkkkn.readbooks.view.customView.BackgroundRadioButton
                android:id="@+id/setting_radio_yellow"
                android:button="@null"
                android:background="@drawable/read_setting_background_select"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorLabel="#B49D42" />

        </RadioGroup>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3D3636"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/read_setting_font"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/subtract_fontSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/read_setting_btn_select"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="â€”"
                android:focusable="true"
                android:clickable="true"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fontSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="22"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/add_fontSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/read_setting_btn_select"
                android:clickable="true"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:focusable="true" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>